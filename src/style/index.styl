body
  background-color #f0f2f5
#app
  min-height 100%
.router-content
  height 100%

.node
  color #00a2d4
  width 100%
  height 100%
  background-image url("../assets/bg.jpg")
  background-size cover
.header
  position fixed
  width 100%
  left 0px
  top 0px
  z-index 9
.login-form
  width 100%
  margin 0 auto
  margin-top 10%
.logout
  position absolute
  right 20px
  top 20px
  background-color rgba(255,255,255,0)
  color #fff
.form-box
  width 900px
  margin 0 auto
  height 400px
  border-radius 5px
  overflow hidden
  position fixed
  left: 50%
  transform translate3d(-50%, -50%, 0)
  top 50%
.form-content
  width 400px
  height 100%
  float left
  background-color #fff
  padding 30px
.login-logo
  width 80px
  display block
  margin 0 auto
.login-admin-text
  font-size 16px
  font-weight 400
  text-align center
  color #666
  span
    color #1db0cc
.form-image
  float left
  width 500px
  height 100%
  overflow hidden
  img
    height 100%
    position relative
    left -160px
.main-sider
  background-color #fff
  position fixed
  left 0px
  top 64px
  height 100%
  z-index 9
.main-content
  min-height 500px
.list-content
  padding-left 200px
.menu-icon
  font-size 32px
  &:before
    position relative
    top 6px
